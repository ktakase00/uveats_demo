<%= form_with model: user, url: sessions_path, method: :post, local: true do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid-x">
    <div class="cell medium-4">
      <div class="field">
        <%= form.label :mail %>
        <%= form.text_field :mail %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password %>
      </div>

      <div class="actions">
        <%= form.submit t('views.sessions.form.submit'), { class: 'button' } %>
      </div>
    </div>

    <div class="cell auto">
    </div>
  </div>
<% end %>
